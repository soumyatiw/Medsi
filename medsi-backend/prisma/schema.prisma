generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email      String    @unique
  password   String
  name       String
  role       Role      @default(PATIENT)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  doctor     Doctor?
  patient    Patient?
}

model Doctor {
  id             String            @id @default(auto()) @map("_id") @db.ObjectId
  userId         String            @unique @db.ObjectId
  specialization String?
  licenseNo      String?
  appointments   Appointment[]
  prescriptions  Prescription[]
  reports        Report[]
  doctorPatients DoctorPatient[]
  doctorSlots    DoctorSlot[]
  createdAt      DateTime          @default(now())

  user           User @relation(fields: [userId], references: [id])
}

model Patient {
  id             String            @id @default(auto()) @map("_id") @db.ObjectId
  userId         String            @unique @db.ObjectId
  dob            DateTime?
  gender         String?
  bloodGroup     String?
  medicalNotes   String?
  appointments   Appointment[]
  prescriptions  Prescription[]
  reports        Report[]
  doctorPatients DoctorPatient[]
  createdAt      DateTime          @default(now())

  user           User @relation(fields: [userId], references: [id])
}

model Appointment {
  id              String             @id @default(auto()) @map("_id") @db.ObjectId
  doctorId        String             @db.ObjectId
  patientId       String             @db.ObjectId
  appointmentDate DateTime
  status          AppointmentStatus  @default(UPCOMING)
  reason          String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  doctor          Doctor @relation(fields: [doctorId], references: [id])
  patient         Patient @relation(fields: [patientId], references: [id])

  prescription    Prescription?
}

model Prescription {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  doctorId       String       @db.ObjectId
  patientId      String       @db.ObjectId
  appointmentId  String?      @unique @db.ObjectId
  diagnosis      String
  medicines      Json
  notes          String?
  createdAt      DateTime     @default(now())

  doctor         Doctor @relation(fields: [doctorId], references: [id])
  patient        Patient @relation(fields: [patientId], references: [id])
  appointment    Appointment? @relation(fields: [appointmentId], references: [id])
}

model DoctorPatient {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  doctorId   String   @db.ObjectId
  patientId  String   @db.ObjectId

  doctor     Doctor   @relation(fields: [doctorId], references: [id])
  patient    Patient  @relation(fields: [patientId], references: [id])

  createdAt  DateTime @default(now())

  @@unique([doctorId, patientId], name: "doctor_patient_unique")
}

model DoctorSlot {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  doctorId      String        @db.ObjectId
  startTime     DateTime
  endTime       DateTime
  duration      Int
  status        SlotStatus    @default(AVAILABLE)
  createdAt     DateTime      @default(now())

  doctor        Doctor        @relation(fields: [doctorId], references: [id])

  // IMPORTANT â†’ not unique
  appointmentId String?       @db.ObjectId
}

model Report {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  doctorId   String   @db.ObjectId
  patientId  String   @db.ObjectId
  fileUrl    String
  notes      String?
  createdAt  DateTime @default(now())

  doctor     Doctor   @relation(fields: [doctorId], references: [id])
  patient    Patient  @relation(fields: [patientId], references: [id])
}
  
enum SlotStatus {
  AVAILABLE
  BOOKED
  EXPIRED
}

enum Role {
  ADMIN
  DOCTOR
  PATIENT
}

enum AppointmentStatus {
  UPCOMING
  COMPLETED
  CANCELLED
}
